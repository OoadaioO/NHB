<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="15dp">
        <ImageView
            android:id="@+id/iv_custom_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            tools:src="@mipmap/app"/>

        <TextView
            android:id="@+id/tv_message_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/appColor"
            android:textSize="16sp"
            tools:text="待确认"/>

        <TextView
            android:id="@+id/tv_custom_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_message_state"
            android:layout_toRightOf="@id/iv_custom_pic"
            android:textColor="@color/c_333333"
            android:textSize="18sp"
            android:maxLines="1"
            tools:text="李先生"/>

        <TextView
            android:id="@+id/tv_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_custom_pic"
            android:textColor="@color/c_666666"
            android:textSize="16sp"
            android:maxLines="1"
            tools:text="会员卡号：1231465465"/>

        <TextView
            android:id="@+id/tv_trade_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_card_number"
            android:layout_below="@id/tv_custom_name"
            android:layout_toRightOf="@id/iv_custom_pic"
            android:textColor="@color/c_666666"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:maxLines="1"
            tools:text="订单号：1231465465"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/c_cacaca"/>
</LinearLayout>