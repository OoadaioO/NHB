<?xml version="1.0" encoding="utf-8"?><!-- 5.9.0 豆腐块七图模板 -->
<LinearLayout
    android:id="@+id/template7_ll_root"
    style="@style/template_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/template7_tv_title"
        style="@style/template_title" />

    <!-- 图ABC,宽高比2:1,左右均分,左边正方形 -->
    <LinearLayout
        android:id="@+id/template7_ll_imagesABC"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/template7_rl_itemA"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/template7_iv_imageA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/f_disabled"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/template7ImageA_tv_seckillName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="--"
                android:textColor="@color/f_title"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/template7ImageA_tv_seckillTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/template7ImageA_tv_seckillName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:text="--"
                android:textColor="@color/c_main"
                android:textSize="@dimen/font_micro" />

            <com.nhb.app.custom.common.view.CountDownView
                android:id="@+id/template7ImageA_cv_seckillTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/template7ImageA_tv_seckillTip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp" />
        </RelativeLayout>

        <View
            android:id="@+id/template7_dividerVTopCenter"
            style="@style/common_vertical_divider" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/template7_iv_imageB"
                style="@style/template_image_vertical_split" />

            <View
                android:id="@+id/template7_dividerHTopRight"
                style="@style/common_horizontal_divider" />

            <ImageView
                android:id="@+id/template7_iv_imageC"
                style="@style/template_image_vertical_split" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/template5_dividerHCenter"
        style="@style/common_horizontal_divider" />

    <!-- 图DEFG,宽高比750:200,水平四等分 -->
    <LinearLayout
        android:id="@+id/template7_ll_imagesDEFG"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/template7_iv_imageD"
            style="@style/template_image_horizontal_split" />

        <View
            android:id="@+id/template7_dividerVBottomLeft"
            style="@style/common_vertical_divider" />

        <ImageView
            android:id="@+id/template7_iv_imageE"
            style="@style/template_image_horizontal_split" />

        <View
            android:id="@+id/template7_dividerVBottomCenter"
            style="@style/common_vertical_divider" />

        <ImageView
            android:id="@+id/template7_iv_imageF"
            style="@style/template_image_horizontal_split" />

        <View
            android:id="@+id/template7_dividerVBottomRight"
            style="@style/common_vertical_divider" />

        <ImageView
            android:id="@+id/template7_iv_imageG"
            style="@style/template_image_horizontal_split" />
    </LinearLayout>

</LinearLayout>